{
  "manifest_version": 2,

  "name": "High five the archive!",
  "description": "The winning hack at the guardian's November 2015 hack day.",
  "version": "1.0",
  "background": {
    "scripts": ["eventPage.js", "jquery-1.11.3.min.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "delorian-icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "downloads",
    "downloads.open",
    "contextMenus",
    "activeTab"
  ],
  "icons": {
          "16": "delorian-icon-16x16.png",
          "48": "delorian-icon-48x48.png",
          "128": "delorian-icon-128x128.png"
  },
  "content_scripts": [
    {
      "matches": ["http://", "https://"],
      "js": ["jquery-1.11.3.min.js", "contentScript.js"]
    }
  ],
}